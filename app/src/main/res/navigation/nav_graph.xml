<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/countryFragment">

    <fragment
        android:id="@+id/countryFragment"
        android:name="com.nytimes.ui.MovieListFragment"
        android:label="Movies"
        tools:layout="@layout/main_fragment">
        <action
            android:id="@+id/action_charactersFragment_to_characterDetailFragment"
            app:destination="@id/provinceFragment" />

    </fragment>
    <fragment
        android:id="@+id/provinceFragment"
        android:name="com.nytimes.ui.MovieDetailsFragment"
        android:label="Movies Details"
        tools:layout="@layout/detail_fragment" />
</navigation>